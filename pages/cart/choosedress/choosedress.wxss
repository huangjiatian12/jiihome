page{
  background: #f3f3f3;
}
#address-box{
  margin-top: 10rpx;
  width: 100%;
  margin-bottom: 100rpx;
}
.address-list{
  box-sizing: border-box;
  width: 100%;
  height: 150rpx;
  padding: 25rpx 32rpx;
  background: white;
  border-bottom: 1rpx solid #f3f3f3;
}
.top{
  height: 50rpx;
  width: 100%;
  overflow: hidden;
}
.name{
   float: left;
   height: 50rpx;
   line-height: 50rpx;
   font-size: 28rpx;
}
.mobile{
  float: right;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
}
.address{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
}
#add-address{
  width: 300rpx;
  height: 80rpx;
  background: #ffc700;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: center;
  margin: 0 auto;
}