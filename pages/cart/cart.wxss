page{
  background: #f3f3f3;
}
#none{
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  margin:450rpx 240rpx;
  color: gray;
}
.goods-box{
  width: 750rpx;
  background: white;
  margin-top:10rpx;
  overflow: hidden;
}
.top{
  width: 750rpx;
  height: 80rpx;
  border-bottom: 1rpx solid #f3f3f3;
  overflow: hidden;
}
.select{
  float: left;
  width: 42rpx;
  height: 42rpx;
  margin:19rpx 32rpx;
}
.minus{
  float: right;
  width: 42rpx;
  height: 42rpx;
  margin:19rpx 10rpx 29rpx 19rpx;
}
.num{
  float: right;
  width: 60rpx;
  height: 60rpx;
  font-size: 30rpx;
  text-align: center;
  margin:20rpx 0; 
}
.add{
  float: right;
  width: 42rpx;
  height: 42rpx;
  margin:19rpx 32rpx 10rpx 19rpx;
}
.info{
  box-sizing: border-box;
  width: 100%;
  height: 200rpx;
  padding:20rpx 32rpx;
  background: white;
}
.goods-img{
  display: inline-block;
  float: left;
  width: 160rpx;
  height: 160rpx;
}
.info-box{
  float: left;
  box-sizing: border-box;
  padding-left: 20rpx;
  width: 526rpx;
  height: 160rpx;
}
.goods-name{
  float: left;
  height: 40rpx;
  width: 410rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}
.goods-price{
  float: right;
  width: 96rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  text-align: right;
}
.attr-val{
  display: inline-block;
  box-sizing: border-box;
  height: 40rpx;
  margin: 4rpx 10rpx 0 0;
  border: 1rpx solid #ccc;
  background: #f3f3f3;
  padding: 4rpx 8rpx;
  line-height: 30rpx;
  font-size: 22rpx;
  color: gray;
}
.empty{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  margin-top: 120rpx;
  margin-left: 640rpx;
}
#bottom{
  position: fixed;
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #f3f3f3;
  bottom: 0;
}
#choose{
  box-sizing: border-box;
  float: left;
  height: 100rpx;
  width: 22%;
  font-size: 28rpx;
  text-align: center;
  line-height: 100rpx;
  background: white;
}
.choose-all{
  float: left;
  width: 38rpx;
  height: 38rpx;
  margin:30rpx 0 32rpx 32rpx;
}
#choose text{
  float: left;
  padding:3rpx 15rpx;
}
#total{
  box-sizing: border-box;
  float: left;
  height: 100rpx;
  width: 46%;
  text-align: right;
  padding-right: 40rpx; 
  font-size: 28rpx;
  color: black;
  line-height: 100rpx;
  border-right: 1rpx solid #f3f3f3;
  background: white;
}
#balance{
  box-sizing: border-box;
  float: left;
  height: 100rpx;
  width: 32%;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  background: #ffc700;
}
#hid{
  width: 100%;
  height: 110rpx;
  background: #f3f3f3;
}