page{
  background: #f3f3f3;
}
#none{
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  margin:500rpx 240rpx;
  color: gray;
}
.address{
  margin-top: 20rpx;
  background: white; 
}
.info{
  width: 750rpx;
  padding: 20rpx 32rpx;
  border-bottom: 1rpx solid #f3f3f3;
}
.name{
  height: 50rpx;
  font-size: 32rpx;
  line-height: 50rpx;
}
.city{
  height: 30rpx;
  font-size: 26rpx;
  color: gray;
  line-height: 30rpx;
}
.edit-box{
  height: 80rpx;
  width: 750rpx;
  background: white;
  overflow: hidden;
}
.default{
  height: 80rpx;
  width: 300rpx;
  float: left;
  overflow: hidden;
}
.default-cho{
  float: left;
  margin: 25rpx 20rpx;
  width: 30rpx;
  height: 30rpx;
}
.default-text{
  float:left;
  height: 80rpx;
  width: 180rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  color: gray;
}
.edit{
  height: 80rpx;
  width: 80rpx;
  line-height: 80rpx;
  padding-right: 40rpx;
  font-size: 24rpx;
  float: right;
  text-align: right;
}
#bottom{
  position: fixed;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #ffc700;
  font-size: 30rpx;
  border-top: 1rpx solid #f3f3f3;
  bottom: 0;
}