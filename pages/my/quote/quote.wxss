page{
  background: #f3f3f3;
}
.furniture{
  box-sizing: border-box;
  display: inline-block;
  width: 50%;
  height: 385rpx;
  padding: 40rpx 40rpx 0;
}
.furniture image{
  width: 100%;
  height: 295rpx;
}
.fur-name{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  text-align: center;
}
.ext-attr{
  width: 295rpx;
  height: 30rpx;
  line-height:30rpx;
  font-size: 22rpx;
  text-align: center;
  color: gray;
  position: absolute;
}
#goMyQuote{
  background: white;
  position: fixed;
  bottom: 80rpx;
  right: 50rpx;
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  border-radius: 50rpx;
  border: 1rpx solid #f3f3f3;
  box-shadow: 3px 3px 3px #ccc;
  font-size: 28rpx;
  line-height: 25rpx;
}