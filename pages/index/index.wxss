page{
  background: white;
}
#search{
  height: 80rpx;
  width: 750rpx;
  background: white;
  overflow: hidden;
}
#search-img{
  float: left;
  margin-left: 310rpx;
  margin-top:-3rpx;
}
#search-ch{
  float: left;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: gray;
}
#search-img image{
  margin-top: 13rpx;
  width: 60rpx;
  height: 60rpx;
}

.slide-image{
  width:100%;
  height:100%;
}

.tab-box{
  padding-top: 80rpx;
  height: 100%;
  box-sizing: border-box;
}
.tab-content{
  overflow-y: scroll;
}
.swiper{
  top: 0;
}

.swiper-tab{    
  line-height: 50rpx;
}

.leftimg,.rightimg{
  width:40rpx;
  text-align: center;
  display: inline-block;
}

.leftimg{
  text-align: left;
}

.rightimg{
  text-align: right;
}

.leftimg {
  position: fixed;
  top: 87rpx;
  left: 10rpx;
}
 
.rightimg {
  position: fixed;
  top: 87rpx;
  right: 10rpx;
}

.leftimg image, .rightimg image {
  width: 100%;
}

.swiper-tab-list{
  font-size: 30rpx;  
  display: inline-block;  
  color: black;
  background-color: whitesmoke; 
  margin-right: 50rpx;
}    

.swiper-box view{    
  text-align: center; 
  top: 0;
}

.swiper-box{
  margin-top: 70rpx; 
  width: 100%; 
}    

.nav {
  height: 60rpx;
  width: 85%;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 80rpx;
  font-size: 16px;
  white-space: nowrap;
  position: absolute;
  top:80rpx;
  left: 50rpx;
  z-index: 99;
}
.item{
  top:90rpx;
  background: yellow;
}
.text{
  height: 50rpx;
  width: 100rpx;
  font-size: 25rpx;
  text-align: center; 
}
.on{ 
  background-color: #55AA66;
  color: white;    
  }
.left{
  height: 35rpx;
  width: 35rpx;
  z-index: 80;
}
.right{
  height: 35rpx;
  width: 35rpx;
  float: right;
  z-index: 80;
}