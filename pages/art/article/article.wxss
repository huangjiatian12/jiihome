@import "/utils/goods.wxss";
.article-bri{
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
}
#product-list{
  margin-top: 10rpx;
}
#canv{
  margin:0 auto;
  margin-bottom:60rpx;
  margin-top: 100rpx;
  width: 240px; 
  height: 350px;
  box-shadow:1px 2px 2px #ccc;
  border-raidus:1px;
  opacity:1;
}
#mask{
  margin:0;
  padding:0;
  border:none;
  width:100%;
  height:100%;
  background:#333;
  opacity:0.8;
  filter:alpha(opacity=60);
  z-index:99;
  position:fixed;
  top:0;
  left:0;
}
.ft{
  text-align: center;
  font-size: 24rpx;
  margin-bottom: 20rpx;
  color: #ccc;
}
#fs{
  margin:0;
  padding:0;
  border:none;
  width:100%;
  height:100%;
  z-index:999;
  position:fixed;
  top:0;
  left:0;
}
#hid{
  height: 100rpx;
  width: 100%;
}
#bottom{
  position: fixed;
  width: 100%;
  height: 100rpx;
  bottom: 0;
  background: white;
}
#bottom-hid{
  display: none;
}
#bottom-share{
  z-index: 999;
  position: fixed;
  width: 100%;
  height: 300rpx;
  bottom: 0;
  border-top: 1rpx solid #f3f3f3;
  text-align: center;
}
#share-top{
  width: 100%;
  height: 220rpx;
  background: #f3f3f3;
}
#share-bot{
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 80rpx;
  background: white;
}
.share-box{
  float: left;
  width: 50%;
  height: 220rpx;
}
.share-img{
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
  margin-top:40rpx; 
  background: white;
}
.share-text{
  margin-top: 20rpx;
  font-size: 20rpx;
}
#btn-share{
  z-index: 1222;
  position: absolute; 
  opacity:0;
  width: 350rpx;
  height: 220rpx;
}
#close{
  float: right;
  width: 50rpx;
  height: 50rpx;
  margin: 60rpx 75rpx 0 0 ;
  border-radius: 25rpx; 
}
.btn-ic{
  float: left;
  width: 15%;
  height: 100%;
  background: white;
}
.btn-ic image{
  width: 50rpx;
  height: 50rpx;
  margin: 15rpx 0 0 32rpx;
  position: relative;
  display: flex;
  flex-direction: column;
}
.btn-text{
  margin: 0;
  padding: 0;
  height: 30rpx;
  font-size: 20rpx;
  width: 100%;
  text-align: center;
}
#l-hr{
  border-left: 1rpx solid #ccc;
  background: red;
  margin-top:15rpx;
  z-index: 10;
  position: fixed;  
  display: flex;
  height: 70rpx;
  bottom:15rpx;
  left: 15%;
}
#share-now{
  float: left;
  text-align: center;
  line-height: 100rpx;
  width: 70%;
  font-size: 30rpx;
  background: #ffc700;
}
#connect{
  box-sizing: border-box;
  border-left: 1rpx solid #ccc;
}
#btn-connect{
  z-index: 10;
  position: fixed;  
  display: flex;
  width: 100rpx;
  height: 90rpx;
  bottom:0rpx;
  left: 16%;
  opacity:0;
}